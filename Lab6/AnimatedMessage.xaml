<Window x:Class="Multimedia_Lab6.AnimatedMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AnimatedMessage" Height="480" Width="480" Loaded="Window_Loaded">
    
    <Grid>
        <TextBox x:Name="TextBoxReview"
            Text="Розробити форму з анімованими елементами керування (розкривними списками (ListBox) і кнопками (Button)), яка видає у вікно перегляду анімовані текстові повідомлення про вибраний варіант. Анімація повинна виконуватись циклічно."
            IsReadOnly="True" TextWrapping="Wrap" RenderTransformOrigin="0.5, 0.5" TextOptions.TextFormattingMode="Display" />
    </Grid>
    
</Window>
